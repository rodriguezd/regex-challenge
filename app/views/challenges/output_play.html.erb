<%= notice %>
<% if current_user %>
<%= link_to "Sign out", signout_path %>
<% end %>
<h1 class="page-title">* Output Challenge *</h1>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6">
      <%= link_to 'Regex Challenge', challenges_regex_play_path, :class => "btn btn-warning" %>

      <%= form_tag challenges_output_check_path, :remote => true do%>
        <h3>Input string:</h3>
        <div class="span4 display-field">
          <%= @input %>
        </div>
        <%= hidden_field_tag :input, @input %>
        <%= hidden_field_tag :challenge_id, @challenge_id %>
        <br><br>
        <h3>Regex:</h3>
        <div class="span4 display-field">
            /<%= @regex %>/
        </div>
        <%= hidden_field_tag :regex, @regex %>
        <br><br>
        <h3> Output: </h3>
        <div class="input-prepend input-append span9">
          <span class="add-on" style="border:2px solid;"><b>"</b></span>
          <input name="submission" value="<%= @submission %>" class="span4" id="appendedPrependedInput" type="text" autocomplete="off" style="font-size: 20px; border:2px solid;">
          <span class="add-on" style="border:2px solid;"><b>"</b></span>
        </div>
        <br><br><br>
        <h4 class="timer-title">Time: </h4><span id="sinceCompact" class="countdown timer">
        </span>
        <div id="submit_next">
          <br>
          <%= button_tag 'Submit Output', :class => "btn btn-primary", :id => "submit" %><br><br>
          <%= link_to 'Next Challenge', challenges_output_play_path, :class => "btn btn-warning", :id => "next_challenge" %>
        </div>
        <%= hidden_field_tag :time, @time, :id => "time"%>
      <% end %>
      <div id="output_results"></div>

    </div>
    <div class="span6">
      <h3 class="span8 arena-title">Looking For A Challenger</h3>
      <div class="span8" id="friends_list" style="height: 200px; border: 2px solid; clear:right; margin-bottom: 3%; background-color: #E2E9E7">
        <%= render 'shared/friends_list' %>
      </div>
      <div style="padding-left: 2%">
      <%= link_to "Update", challenges_friends_list_path, :class => "btn btn-primary update-button", :id => "update_friends", :remote => true%>
      <%= link_to "Enter Arena", users_enter_arena_path, :class => "btn btn-primary arena-button", :id => "enter_arena", :remote => true %>
      <%= link_to "Exit Arena", users_exit_arena_path, :class => "btn btn-primary arena-button", :id => "exit_arena", :style => "display: inline-block; float: left; margin-left: 1%;", :remote => true %>
      </div>
      <h3 class="span8 leader-board-title">Leader Board</h3>
      <div class="span8 leader-board" id="leader_board">
        <%= render 'shared/leader_board' %>
    </div>
  </div>
</div>
