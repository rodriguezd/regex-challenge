<h1 style="text-align: center;color: orange;">* Regex Challenge *</h1>


<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6">
      <%= link_to 'Regex Challenge', challenges_regex_play_path, :class => "btn btn-warning" %>

      <%= form_tag challenges_output_check_path, :remote => true do%>
        <h3>Input string:</h3>
        <div class="span4" style="border:2px solid;float: left; height: 2em; font-size: 20px;background-color: #E2E9E7">
          <%= @input %>
        </div>
        <%= hidden_field_tag :input, @input %>
        <br><br>
        <h3>Regex:</h3>
        <div class="span4" style="border:2px solid;float: left; height: 2em; font-size: 20px;background-color: #E2E9E7">
            /<%= @regex %>/
        </div>
        <%= hidden_field_tag :regex, @regex %>
        <br><br>
        <h3> Output: </h3>
        <div class="input-prepend input-append span4">
          <span class="add-on"><b>"</b></span>
          <input name="submission" value="<%= @submission %>" class="span4" id="appendedPrependedInput" type="text" autocomplete="off" style="font-size: 20px;">
          <span class="add-on"><b>"</b></span>
        </div>
        <br><br>
        <h4 style="float: left;">Timer: </h4><span id="sinceCompact" class="countdown">
        <span class="countdown_row countdown_amount"></span>
        </span>
        <br><br>
        <%= button_tag 'Submit Output', :class => "btn btn-primary", :id => "submit" %><br><br>
        <%= link_to 'Next Challenge', challenges_output_play_path, :class => "btn btn-warning"%>
        <%= hidden_field_tag :time, @time, :id => "time"%>
      <% end %>
      <div id="output_results">

      </div>

    </div>
    <div class="span6">
      <div class="span8" id="friends_list" style="height: 200px; border: 2px solid; clear:right; margin-bottom: 3%;">
        <%= render 'friends_list' %>
      </div>
      <%= link_to "Update", challenges_friends_list_path, :class => "btn btn-primary", :id => "update_friends", :style => "display: inline-block; float: left;  clear: left;", :remote => true%>
    </div>
  </div>
</div>
